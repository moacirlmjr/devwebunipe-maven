<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="GerenciamentoDeAdvogados"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.com.unipe.gerenciamentoAdvogados.model.vo.EntityMaster</class>
		<class>br.com.unipe.gerenciamentoAdvogados.model.vo.Autorizacao</class>
		<class>br.com.unipe.gerenciamentoAdvogados.model.vo.Usuario</class>
		<class>br.com.unipe.gerenciamentoAdvogados.model.vo.Advogado</class>
		<class>br.com.unipe.gerenciamentoAdvogados.model.vo.Anuidade</class>
		<class>br.com.unipe.gerenciamentoAdvogados.model.vo.Evento</class>
		
		<properties>
			<property name="connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/advogados" />
			<property name="hibernate.connection.username" value="postgres"></property>
			<property name="hibernate.connection.password" value="mv13wavaty"></property>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
<!-- 			<property name="hibernate.hbm2ddl.auto" value="create-drop" /> -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

		</properties>
	</persistence-unit>
</persistence>
